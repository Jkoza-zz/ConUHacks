<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ItemTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/item_title_color</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="ItemBody" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal|italic</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <style name="EditButtonStyle" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/ripple_edit_buttons</item>
    </style>

    <style name="EditLocationDialogInputStyle">
        <item name="android:padding">@dimen/edit_location_dialog_input_padding</item>
        <item name="android:hint">@string/dialog_edit_location_hint</item>
        <item name="android:inputType">textFilter</item>
    </style>

    <style name="EditLocationDialogLabelStyle">
        <item name="android:text">@string/dialog_edit_location_title</item>
        <item name="android:padding">@dimen/edit_location_dialog_label_padding</item>
        <item name="android:textSize">@dimen/edit_location_dialog_label_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ListItemSpinnerStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="NavigationDrawerItemStyle">
        <item name="android:padding">@dimen/navigation_item_padding</item>
        <item name="android:drawablePadding">@dimen/navigation_item_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/navigation_drawer_text_size</item>
    </style>
    
    <style name="EmptyViewWidgetLabelStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/empty_view_widget_label_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmptyViewWidgetBtnStyle" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:layout_marginLeft">@dimen/empty_view_widget_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/empty_view_widget_btn_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/empty_view_widget_label_text_size</item>
        <item name="android:background">@drawable/ripple_primary_dark_button</item>
    </style>

    <style name="ActionBarSplatStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/actionbar_splat_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/actionbar_splat_padding</item>
        <item name="android:background">@drawable/actionbar_splat_background</item>
    </style>

    <style name="AutoCompleteTextViewStyle">
        <item name="android:layout_marginBottom">@dimen/margin_edit_item_pieces</item>
        <item name="android:layout_marginLeft">@dimen/margin_edit_item_pieces</item>
        <item name="android:layout_marginRight">@dimen/margin_edit_item_pieces</item>
        <item name="android:layout_marginTop">@dimen/margin_edit_item_pieces</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#f233cfe8</item>
        <item name="sv_showcaseColor">#CCffffff</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomShowcaseTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>
    </style>

    <style name="CustomShowcaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CustomDetailText" parent="android:style/TextAppearance">
        <item name="android:textColor">#1c6aac</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
